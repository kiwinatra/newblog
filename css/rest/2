/**
 * CSS Styles for code highlighting.
 * Feel free to customize token styles 
 * by copying from a prismjs compatible theme:
 * https://github.com/PrismJS/prism-themes
 */

/* Code title styles */
.remark-code-title {
  @apply rounded-t bg-christmas-green-900 px-5 py-3 font-mono text-sm font-bold text-christmas-white border-b border-christmas-red-500;
}

.remark-code-title + div > pre {
  @apply mt-0 rounded-t-none;
}

/* Code block styles */
.code-highlight {
  @apply float-left min-w-full;
}

.code-line {
  @apply -mx-4 block border-l-4 border-transparent pl-4 pr-4;
}

.code-line.inserted {
  @apply bg-christmas-green-900 bg-opacity-30;
}

.code-line.deleted {
  @apply bg-christmas-red-900 bg-opacity-30;
}

.highlight-line {
  @apply -mx-4 border-l-4 border-christmas-red-500 bg-christmas-green-900 bg-opacity-30;
}

.line-number::before {
  @apply mr-4 -ml-2 inline-block w-4 text-right text-christmas-green-400;
  content: attr(line);
}

/* Token styles */
