.token.comment,
.token.prolog,
.token.cdata {
  color: #228B22;
  font-style: italic;
}

.token.punctuation {
  color: #FFD700;
}

.namespace {
  color: #DC143C;
}

.token.deleted {
  color: rgba(220, 20, 60, 0.7);
  font-style: italic;
}

.token.symbol,
.token.property {
  color: #228B22;
}

.token.tag,
.token.operator,
.token.keyword {
  color: #DC143C;
}

.token.boolean {
  color: #FF8C00;
}

.token.number {
  color: #FF4500;
}

.token.constant,
.token.function,
.token.builtin,
.token.char {
  color: #32CD32;
}

.token.selector,
.token.doctype {
  color: #FFD700;
  font-style: italic;
}

.token.attr-name,
.token.inserted {
  color: #228B22;
  font-style: italic;
}

.token.string,
.token.url,
.token.entity,
.language-css .token.string,
.style .token.string {
  color: #90EE90;
}

.token.class-name,
.token.atrule,
.token.attr-value {
  color: #FFD700;
}

.token.regex,
.token.important,
.token.variable {
  color: #98FB98;
}

.token.important,
.token.bold {
  font-weight: bold;
}

.token.italic {
  font-style: italic;
}

.token.table {
  display: inline;
}

